    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId"
            parameterType="com.personInfo.bean.User">
        insert into `tb_disable_date_user`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="nickName != null">
                nick_name,
            </if>
            <if test="loginName != null">
                login_name,
            </if>
            <if test="passwordMd5 != null">
                password_md5,
            </if>
            <if test="isDeleted != null">
                is_deleted,
            </if>
            <if test="lockedFlag != null">
                locked_flag,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="nickName != null">
                #{nickName,jdbcType=VARCHAR},
            </if>
            <if test="loginName != null">
                #{loginName,jdbcType=VARCHAR},
            </if>
            <if test="passwordMd5 != null">
                #{passwordMd5,jdbcType=VARCHAR},
            </if>
            <if test="isDeleted != null">
                #{isDeleted,jdbcType=INTEGER},
            </if>
            <if test="lockedFlag != null">
                #{lockedFlag,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>


    <update id="updatePassword" parameterType="java.lang.String">
    update `tb_disable_date_user`
    set
        password_md5 = #{newPassword,jdbcType=VARCHAR}
    where login_name = #{loginName,jdbcType=VARCHAR}
  </update>

    <update id="updateNickName" parameterType="java.lang.String">
        update `tb_disable_date_user`
        set
            nick_name = #{nickName,jdbcType=VARCHAR}
        where login_name = #{loginName,jdbcType=VARCHAR}
    </update>


    <delete id="delete" parameterType="java.lang.Integer">
        delete from `tb_disable_date_user` where user_id = #{userId}
    </delete>

